{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "packages:jsTest",
    ":automergeStableNonMajor",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":combinePatchMinorReleases",
    ":pinAllExceptPeerDependencies",
    ":disableDependencyDashboard"
  ],
  "labels": ["dependencies"],
  "automerge": true,
  "packageRules": [
    {
      "matchPackagePrefixes": ["@react-aria/", "@react-types/", "@react-stately/"],
      "groupName": "react-aria monorepo"
    },
    {
      "matchPackagePrefixes": ["@typescript-eslint/", "@commitlint/", "eslint", "prettier"],
      "groupName": "linting"
    },
    {
      "matchPackagePrefixes": ["@changesets/"],
      "groupName": "changesets"
    }
  ],
  "prConcurrentLimit": 2
}
